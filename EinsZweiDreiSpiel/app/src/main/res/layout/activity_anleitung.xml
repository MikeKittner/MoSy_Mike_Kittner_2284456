<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnleitungActivity">

    <TextView
        android:id="@+id/Anleitungtext"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/hintergrund123"
        android:text="\n\n\n\n In jeder Runde wird Ihnen eine Frage gestellt, zu der es 3 Antwort-Optionen gibt. Durch scannen des richtigen QR-Codes und das pressen des Abgeben-Button können Sie die gewünschte Antwort auswählen. Am Ende des Spiels wird Ihnen ein Auswertung angezeigt"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>